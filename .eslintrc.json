{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "next" }]
  }
}
